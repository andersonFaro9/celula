<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:background="#FFF"
                                             android:layout_height="match_parent" android:id="@+id/linearLayout">


    <EditText
            android:id="@+id/nota"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:singleLine="true"
            android:hint="TÃ­tulo"
            android:background="#1DFCFAFA"
            android:textSize="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"/>


    <Button android:id="@+id/salva"
            android:layout_width="82dp"
            android:layout_height="26dp"
            android:visibility="invisible"
            android:text="Salvar"
            android:textAllCaps="false"

            android:textSize="14dp"
            android:clickable="true"
            android:background="@null"
            android:textAlignment="textEnd"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/detalhes"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="82dp"
            android:inputType="textMultiLine"
            android:ems="90"
            android:textSize="16dp"
            android:id="@+id/detalhes"
            android:background="#1DFCFAFA"
            android:hint="Detalhes"
            android:textAlignment="textStart" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/nota" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>