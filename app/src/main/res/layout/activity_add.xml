<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="#FFF"
        android:layout_height="match_parent" android:id="@+id/linearLayout">


    <EditText
            android:id="@+id/titulo"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:singleLine="true"

            android:hint="Seu título, ex: Mateus 23"
            android:backgroundTint="@color/color_input"
            android:textSize="16dp"

            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"/>


    <Button android:id="@+id/salva"
            android:layout_width="99dp"
            android:layout_height="47dp"
            android:visibility="invisible"
            android:text="Salvar"
            android:textSize="14dp"
            android:clickable="true"
            android:backgroundTint="@color/color_input"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/detalhes" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="82dp"
            android:inputType="textMultiLine"
            android:ems="90"
            android:textSize="16dp"
            android:id="@+id/detalhes"
            android:backgroundTint="@color/color_input"
            android:hint="Detalhes, ex: Ai de vós, escribas e fariseus, hipócritas..."
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/titulo"/>

</androidx.constraintlayout.widget.ConstraintLayout>