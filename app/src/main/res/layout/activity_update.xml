<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:background="#FFF"
                                             android:layout_height="match_parent"
                                             android:id="@+id/linearLayout3">

    <EditText
            android:id="@+id/novoTitulo"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:singleLine="true"

            android:hint="Novo tÃ­tulo"
            android:backgroundTint="@color/color_input"
            android:textSize="16dp"

            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="82dp"
            android:inputType="textMultiLine"
            android:ems="90"
            android:textSize="16dp"
            android:id="@+id/novoDetalhe"
            android:backgroundTint="@color/color_input"
            android:hint="Novos detalhes"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/novoTitulo" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button android:id="@+id/editar"
            android:layout_width="99dp"
            android:layout_height="47dp"
            android:text="Editar"
            android:textSize="14dp"
            android:clickable="true"
            android:backgroundTint="@color/color_input"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/novoDetalhe" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>