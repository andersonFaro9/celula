<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:background="#FFF"
                                             android:layout_height="match_parent"
                                             android:id="@+id/linearLayout3">

    <EditText
            android:layout_width="366dp"
            android:layout_height="43dp"
            android:singleLine="true"
            android:hint="Novo tÃ­tulo"
            android:textSize="18sp"
            android:id="@+id/novoTitulo"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:id="@+id/novoDetalhe"
            android:layout_width="366dp"
            android:layout_height="139dp"
            android:inputType="text|textMultiLine"
            android:hint="Novos Detalhes"
            android:gravity="start|top"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/novoTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:textSize="14sp"/>

    <Button
            android:id="@+id/editar"
            android:textColor="#A32E1A"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="Editar"
            android:textAllCaps="true"
            android:textSize="14dp"
            android:clickable="true"
            android:background="@null"

            app:layout_constraintTop_toBottomOf="@+id/novoDetalhe"

            android:textAlignment="textEnd"
            android:layout_marginTop="16dp" android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>